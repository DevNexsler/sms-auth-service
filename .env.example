# Server Configuration
NODE_ENV=development
PORT=3000

# Application URL (update after deployment)
APP_URL=https://rcs-auth-service.onrender.com

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# RCS Configuration
MESSAGING_SERVICE_SID=your-messaging-service-sid  # Required for RCS
RCS_SENDER_ID=your-rcs-sender-id  # From Twilio Console after approval

# Authentication Settings
SESSION_DURATION_DAYS=7
RCS_SECURITY_REQUIRED=true  # Enforce RCS for authenticated sessions
ALLOW_SMS_INITIAL_CONTACT=true  # Allow first LOGIN via SMS
RCS_SETUP_URL=https://rcs-auth-service.onrender.com/rcs-setup